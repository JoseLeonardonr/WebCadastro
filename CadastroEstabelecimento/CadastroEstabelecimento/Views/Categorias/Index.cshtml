@model IEnumerable<CadastroEstabelecimento.Models.Categorias>

@{
    ViewData["Title"] = "Categorias";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Nova categoria</a>
</p>
<table class="table table-striped table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default btn-sm">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default btn-sm">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default btn-sm">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
